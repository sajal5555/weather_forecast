<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="city"
            type="String" />

        <variable
            name="viewModel"
            type="com.assignment.viewmodel.MapLocationsViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bookmark_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_12"
        app:onClick="@{city}"
        tools:context="com.assignment.fragment.MapLocationsFragment">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/city_name"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/dp_4"
            android:gravity="start"
            android:paddingStart="@dimen/dp_6"
            android:paddingEnd="@dimen/dp_2"
            android:text="@{city}"
            android:textColor="@color/secondaryTextColor"
            android:textSize="@dimen/sp_16"
            app:layout_constraintBottom_toBottomOf="@+id/cancel_button"
            app:layout_constraintEnd_toStartOf="@+id/bookmark_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/cancel_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@color/white"
            android:onClick="@{(v) ->viewModel.onCancelClick(city)}"
            android:src="@drawable/ic_baseline_cancel_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/bookmark_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@color/white"
            android:onClick="@{(v) ->viewModel.onBookmarkClick(city)}"
            android:src="@drawable/ic_baseline_star_border_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/cancel_button"
            app:layout_constraintTop_toTopOf="parent"
            app:visibility="@{city}" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>